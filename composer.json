{
    "name": "indieinabox/indieinabox",
    "description": "A Social Swiss Army Knife for Personal Websites",
    "type": "project",
    "license": "ISC",
    "authors": [
        {
            "name": "Lumen Freitas",
            "email": "hi@lumen.pink"
        }
    ],
    "minimum-stability": "dev",
    "require-dev": {
        "phpcompatibility/php-compatibility": "^10.0@dev",
        "squizlabs/php_codesniffer": "^3.0@dev",
        "pestphp/pest": "3.x-dev"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "sniffer:phpcompat": "phpcs -p ./_engine --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 7.4-"
    }   
}
